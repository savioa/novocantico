<hino situacao="incompleto">
  <numero>036</numero>
  <n>36</n>
  <titulo>Exaltação Universal</titulo>
  <texto>
    <estrofe>
      <verso>De toda a terra e das nações,</verso>
      <verso>Louvor a Cristo entoai!</verso>
      <verso>Em alta voz, dos corações,</verso>
      <verso>O Nome de Jesus cantai.</verso>
      <coro>
        <verso>O dom supremo, divinal,</verso>
        <verso>Justiça eterna e santo amor;</verso>
        <verso>De litoral em litoral</verso>
        <verso>Serão cantados ao Senhor!</verso>
      </coro>
    </estrofe>
    <estrofe>
      <verso>Em toda língua bendizei</verso>
      <verso>A Deus, autor da Criação!</verso>
      <verso>Em toda a terra engrandecei</verso>
      <verso>Jesus que trouxe a redenção!</verso>
    </estrofe>
  </texto>
  <secao id="01">Louvor e Adoração</secao>
  <assunto id="08">Deus Senhor</assunto>
  <origem_letra>J. H. Nelson</origem_letra>
</hino>