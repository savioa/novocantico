    <tex>
        <est>
            <ver>A ti, meu Criador,</ver>
            <ver>Dos altos céus Senhor,</ver>
            <ver>Eu quero honrar.</ver>
            <ver>Aceita a adoração</ver>
            <ver>Que a voz e o coração</ver>
            <ver>Te vêm, bondoso Pai,</ver>
            <ver>Aqui prestar.</ver>
        </est>
        <est>
            <ver>A ti, Emanuel,</ver>
            <ver>Por teu amor fiel</ver>
            <ver>Rendo eu louvor.</ver>
            <ver>Do céu trouxeste a luz,</ver>
            <ver>Por mim sofreste a cruz,</ver>
            <ver>Bendito sejas, pois,</ver>
            <ver>Meu Redentor</ver>
        </est>
        <est>
            <ver>A ti, Consolador,</ver>
            <ver>Divino Preceptor,</ver>
            <ver>Eu louvarei.</ver>
            <ver>Com teu poder sem par,</ver>
            <ver>Oh! Vem me iluminar,</ver>
            <ver>E assim, ao teu fulgor,</ver>
            <ver>Eu brilharei.</ver>
            <ver>Amém.</ver>
        </est>
    </tex>
